<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@drawable/backk"
    android:id="@+id/homee">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/karam_backgrond"
          android:elevation="4dp"
          app:titleTextColor="#000"
          android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

      <ImageView
          android:id="@+id/imgLogo"
          android:layout_width="300dp"
          android:layout_height="70dp"
          android:contentDescription="@string/app_name"
          android:layout_marginLeft="50dp"
          android:layout_marginTop="15dp"
          android:padding="10dp"
          android:src="@drawable/juhlogo"
          app:layout_constraintBottom_toTopOf="@+id/linearLayout"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

      <EditText
          android:id="@+id/editTextTextPersonName"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:background="@drawable/white"
          android:ems="10"
          android:inputType="textPersonName"
          android:drawableStart="@drawable/search_24"
          android:drawablePadding="15dp"
          android:padding="10dp"
          android:hint="Searching"
          android:textStyle="italic"
          android:textSize="18dp"
          android:textColor="#000"
          android:gravity="center_vertical"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp">

          <ImageButton
              android:id="@+id/before"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/before_24"
              android:layout_marginTop="60dp"
              android:layout_marginLeft="15dp"/>

          <ImageSwitcher
              android:id="@+id/switchh"
              android:layout_width="300dp"
              android:layout_height="180dp"
              android:inAnimation="@android:anim/slide_in_left"
              android:outAnimation="@android:anim/slide_out_right"/>
          <ImageButton
              android:id="@+id/next"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:background="@drawable/next_24"
              android:layout_marginTop="60dp"/>


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp">

          <TextView
              android:layout_width="100dp"
              android:layout_height="20dp"
              android:layout_marginLeft="30dp"
              android:text="Last News"
              android:textColor="#fff"
              android:textSize="17sp"
              android:textStyle="bold|italic" />

          <TextView
              android:layout_width="100dp"
              android:layout_height="20dp"
              android:layout_marginLeft="190dp"
              android:text="See All"
              android:textSize="17sp"
              android:textColor="#fff"
              android:textStyle="bold|italic" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <GridLayout
              android:id="@+id/grid"
              android:rowCount="1"
              android:columnCount="3"
              android:layout_marginBottom="20dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <androidx.cardview.widget.CardView
                  android:id="@+id/card"
                  android:layout_width="110dp"
                  android:layout_height="wrap_content"
                  android:layout_row="0"
                  android:layout_column="0"
                  android:layout_gravity="fill"
                  android:layout_rowWeight="0"
                  android:layout_columnWeight="0"
                  android:layout_margin="8dp"
                  android:background="#6CD9E5">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_gravity="center_vertical|center_horizontal">

                      <ImageView
                          android:layout_width="90dp"
                          android:layout_height="100dp"
                          android:src="@drawable/covid19"/>



                      <TextView
                          android:id="@+id/a"
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:text="Expanded access to COVID-19 antiviral treatment in Ontario"
                          android:textSize="10dp"
                          android:textStyle="bold"
                          android:textColor="#000"
                          android:textAlignment="center"/>


                  </LinearLayout>

              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/card1"
                  android:layout_width="110dp"
                  android:layout_height="wrap_content"
                  android:layout_row="0"
                  android:layout_column="1"
                  android:layout_gravity="fill"
                  android:layout_rowWeight="0"
                  android:layout_columnWeight="0"
                  android:layout_margin="8dp"
                  android:background="#fff">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_gravity="center_vertical|center_horizontal">

                      <ImageView
                          android:layout_width="90dp"
                          android:layout_height="100dp"
                          android:src="@drawable/thb"/>



                      <TextView
                          android:id="@+id/a1"
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:text="Tuberculosis: A pandemic overshadowed by another pandemic"
                          android:textStyle="bold"
                          android:textSize="10dp"
                          android:textColor="#000"
                          android:textAlignment="center"/>


                  </LinearLayout>

              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/card2"
                  android:layout_width="110dp"
                  android:layout_height="150dp"
                  android:layout_row="0"
                  android:layout_column="2"
                  android:layout_gravity="fill"
                  android:layout_rowWeight="0"
                  android:layout_columnWeight="0"
                  android:layout_margin="8dp"
                  android:background="#fff">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_gravity="center_vertical|center_horizontal">

                      <ImageView
                          android:layout_width="90dp"
                          android:layout_height="100dp"
                          android:src="@drawable/study"/>



                      <TextView
                          android:id="@+id/a2"
                          android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:text="Study finds high percentage of patients with a severe COVID-19 "
                          android:textSize="10dp"
                          android:textStyle="bold"
                          android:textColor="#000"
                          android:textAlignment="center"/>


                  </LinearLayout>

              </androidx.cardview.widget.CardView>
          </GridLayout>


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:orientation="horizontal"

          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginBottom="40dp">


          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="10dp">


              <ImageView
                  android:layout_width="80dp"
                  android:layout_height="50dp"
                  android:src="@drawable/doctorr3"
                  android:layout_marginTop="5dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Medical Unit"/>


          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="30dp">


              <ImageView
                  android:layout_width="80dp"
                  android:layout_height="50dp"
                  android:src="@drawable/doctor4"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="20dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Medical Department"/>


          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="30dp">


              <ImageView
                  android:layout_width="80dp"
                  android:layout_height="50dp"
                  android:src="@drawable/doctor1v"
                  android:layout_marginTop="5dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Achievement"/>


          </LinearLayout>


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="center">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text="All right reserved - Jordan University Hospital"
              android:textColor="#000" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_copyright"

              app:layout_constraintHorizontal_bias="0.16"
              />

      </LinearLayout>



  </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_mune"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>

