<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hi"
    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="35dp"

      android:orientation="vertical">

      <ImageView
          android:id="@+id/logo"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          android:layout_marginTop="40dp"
          android:src="@drawable/logonew" />

      <TextView
          android:id="@+id/title1"
          android:text="Welcome to The Jordan University Hospital "
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:textStyle="bold"
          android:gravity="center"
          android:layout_marginTop="10dp"
          android:textColor="#fff" />

      <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:minHeight="48dp"
          android:theme="@style/TextInputLayoutStyle"
          app:boxStrokeColor="#000"
          app:hintTextAppearance="@color/design_default_color_primary"
          tools:ignore="SpeakableTextPresentCheck" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/loginD"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="70dp"
          android:hint=" Enter Your Email"
          android:inputType="textEmailAddress"
          android:drawableStart="@drawable/email"
          android:ems="10"
          android:minHeight="48dp"
          android:drawablePadding="10dp"
          android:padding="10dp"
          android:textColor="#000"
          android:textColorHint="#000"
          android:textSize="18sp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:background="@drawable/white"/>

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/passwordD"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50px"
          android:hint=" Enter Your Password"
          android:inputType="textPassword"
          android:padding="10dp"
          android:ems="10"
          android:drawablePadding="10dp"
          android:drawableStart="@drawable/key"
          android:textColor="#000"
          android:textColorHint="#000"
          android:textSize="18sp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:background="@drawable/white"/>

      <com.google.android.material.textfield.TextInputLayout
      style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:theme="@style/TextInputLayoutStyle"
      app:boxStrokeColor="#000"
      app:hintTextAppearance="@color/design_default_color_primary"
      tools:ignore="SpeakableTextPresentCheck" />


      <Button
          android:id="@+id/loginButton1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="40dp"
          android:insetLeft="40dp"
          android:insetRight="40dp"
          android:text="Sign In"
          android:textAllCaps="false"
          android:textColor="#fff" />

      <Button
          android:id="@+id/next3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:insetLeft="40dp"
          android:insetRight="40dp"
          android:text="Sign Up"
          android:textAllCaps="false"
          android:textColor="#fff" />



  </LinearLayout>

</ScrollView>